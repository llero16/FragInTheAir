<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4169e1"
    android:padding="20dp">


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrivalTime_textview"
        android:textColor="#fff"
        android:layout_alignBaseline="@+id/departureTime_textview"
        android:layout_alignBottom="@+id/departureTime_textview"
        android:layout_toRightOf="@+id/originAirport_textview"
        android:layout_toEndOf="@+id/originAirport_textview"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/destinationAirport_textview"
        android:textColor="#fff"
        android:layout_marginTop="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/arrivalTime_textview"
        android:layout_alignStart="@+id/arrivalTime_textview" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/duration_textview"
        android:textColor="#ff00ff"
        android:layout_alignBaseline="@+id/arrivalTime_textview"
        android:layout_alignBottom="@+id/arrivalTime_textview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/airline_textview"
        android:textColor="#fff"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_above="@+id/originAirport_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:textSize="16sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/originAirport_textview"
        android:textColor="#fff"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignBaseline="@+id/destinationAirport_textview"
        android:layout_alignBottom="@+id/destinationAirport_textview"
        android:layout_toRightOf="@+id/airline_textview"
        android:layout_toEndOf="@+id/airline_textview" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/departureTime_textview"
        android:textColor="#fff"
        android:layout_above="@+id/airline_textview"
        android:layout_alignLeft="@+id/originAirport_textview"
        android:layout_alignStart="@+id/originAirport_textview" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fare_textview"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/destinationAirport_textview"
        android:layout_alignBottom="@+id/destinationAirport_textview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>